---
import { Icon } from 'astro-icon/components';

interface Props {
  icon: string;
  title: string;
  subtitle: string;
  dropText: string;
  iconColor?: string;
  bgColorHover?: string;
  className?: string;
}

const { 
  icon, 
  title, 
  subtitle, 
  dropText, 
  iconColor = "text-arvi-secondary",
  bgColorHover = "bg-arvi-secondary/10 border-arvi-secondary/20 hover:bg-arvi-secondary/20",
  className = "" 
} = Astro.props;
---

<!-- Mantenemos exactamente la misma estructura que Card + CardContent -->
<div class={`group relative overflow-hidden rounded-lg border border-arvi-text/10 bg-arvi-background p-4 shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 ${bgColorHover} cursor-pointer ${className}`}>
  <!-- Contenido original (Card + CardContent) -->
  <div class="p-6 text-center relative z-10">
    <div class={`mb-3 flex justify-center ${iconColor} group-hover:scale-110 transition-transform duration-300`}>
      <Icon name={icon} class="w-8 h-8" />
    </div>
    <h4 class="mb-2 text-lg font-heading text-arvi-text">{title}</h4>
    <p class="text-sm text-arvi-text/70">
      {subtitle}
    </p>
  </div>

  <!-- Texto desplegable con efecto drop -->
  <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-arvi-primary/95 to-arvi-primary/85 backdrop-blur-sm p-4 transform translate-y-full opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 ease-out z-20 rounded-b-lg">
    <p class="text-xs text-arvi-text leading-relaxed animate-fade-in-up">
      {dropText}
    </p>
  </div>
</div>
